<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgor"

    tools:context=".meeting">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:src="@drawable/managecasa" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Meeting"
        android:textColor="@color/DarkBlue"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:layout_width="271dp"
        android:layout_height="246dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/meet" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_meeting_room_24"
            android:hint="Enter meeting no."
            android:inputType="number"
            android:padding="1dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:drawableLeft="@drawable/baseline_meeting_room_24"
            android:focusable="false"
            android:hint="Select a date"
            android:inputType="date"
            android:padding="1dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:drawableLeft="@drawable/baseline_meeting_room_24"
            android:focusable="false"
            android:hint="Select a time"
            android:inputType="time"
            android:padding="1dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_meeting_room_24"
            android:gravity="top|start"
            android:hint="What is Agenda for this meeting?"
            android:inputType="textMultiLine"
            android:padding="1dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Light_Blue"
        android:layout_gravity="center"
        app:cornerRadius = "25dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textSize="18dp"
        android:text="ADD" />





</LinearLayout>

</ScrollView>