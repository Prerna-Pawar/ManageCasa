<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgor"
    tools:context=".Notice_create">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="330dp"
                android:layout_height="87dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/managecasa" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkBlue"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textSize="25dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:text="Notice"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/Grey"
                android:text="Create notice here and display it to members of apartment"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="80dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="215dp"
                    android:layout_height="200dp"
                    android:background="@drawable/onboarding_indicator_active"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/note" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:elevation="4dp"
                app:cardCornerRadius="6dp"
                android:layout_margin="4dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Transparent"
                    android:layout_margin="2dp"
                    android:padding="6dp"
                    android:textSize="18dp"
                    android:inputType="text"
                    android:hint="Title"
                    android:textColorHint="@color/Grey"
                    tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:elevation="4dp"
                app:cardCornerRadius="6dp"
                android:layout_margin="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/editTextDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:layout_margin="2dp"
                    android:padding="6dp"
                    android:textSize="18dp"
                    android:inputType="date"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:elevation="4dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="6dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/notice"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/editTextDate"
                    android:layout_margin="2dp"
                    android:padding="6dp"
                    android:textSize="18dp"
                    android:background="@color/Transparent"
                    android:hint="Notice Description"
                    android:textColorHint="@color/Grey"
                    android:textAlignment="textStart"
                    android:inputType="textMultiLine"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TextSizeCheck" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="SEND"
                    android:padding="5dp"
                    app:cornerRadius = "20dp"
                    android:textSize="18dp"
                    android:backgroundTint="@color/colorAccent"
                    tools:ignore="TextSizeCheck" />

                <Button
                    android:id="@+id/display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Display"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:textSize="18dp"
                    app:cornerRadius = "20dp"
                    tools:ignore="TextSizeCheck" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>